{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"capAdd": [
		"SYS_PTRACE"
	],
	"securityOpt": [
		"seccomp=unconfined"
	],
	"extensions": [
		"cheshirekow.cmake-format",
		"llvm-vs-code-extensions.vscode-clangd",
		"ms-vscode.cmake-tools",
		"ms-vscode.cpptools",
		"ms-vscode.live-server",
		"redhat.vscode-yaml"
	],
	"settings": {
		"C_Cpp.intelliSenseEngine": "disabled",
		"clangd.path": "clangd-15",
		"files.associations": {
			".clang-format": "yaml",
			".clang-tidy": "yaml",
			".clangd": "yaml",
			".cmake-format": "yaml",
			"*.cmake.in": "cmake"
		},
		"files.exclude": {
			"**/.cache": true
		}
	}
}
